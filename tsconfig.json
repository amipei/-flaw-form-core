{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2017",
    "module": "ES2017",
    /* 输出目录 */
    //"outDir": "./lib/types",
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* 只生成类型文件，不转换代码 */
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true
  },
  /* 只编译 src目录下的文件 */
  "include": [
    "src"
  ],
  "exclude": [
    "test"
  ]
}